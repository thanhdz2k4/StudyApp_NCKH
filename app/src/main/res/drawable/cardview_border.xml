<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Đường viền (Border) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/cardview_border"/> <!-- Đổi màu viền theo ý thích -->
            <corners android:radius="8dp"/> <!-- Góc bo tròn cho viền -->
        </shape>
    </item>

    <!-- Nền của CardView -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="8dp"/> <!-- Góc bo tròn cho nền -->
        </shape>
    </item>

</layer-list>
